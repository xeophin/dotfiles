# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2
max_line_length = 100

# 4 space indentation, as per PEP8
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[{*.yaml,*.yml}]
indent_size = 2
indent_style = space

